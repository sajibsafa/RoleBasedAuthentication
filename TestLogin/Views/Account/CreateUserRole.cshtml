@model TestLogin.Models.RoleUserVm

<h1>User Role Input</h1>

<form method="post" asp-action="CreateUserRole" asp-controller="Account">
    <div class="form-group">
        <label for="UserId">Select User:</label>
        <select asp-for="UserId" class="form-control" asp-items="@(ViewBag.UserList)"></select>
        <option value=""> select user</option>
    </div>

    <div class="form-group">
        <label for="RoleId">Select Role:</label>
        <select asp-for="RoleId" class="form-control select2" asp-items="@(ViewBag.RoleList)">

            <option value=""> select role____</option>
        </select>

    </div>

    <button type="submit" class="btn btn-primary">Assign Role to User</button>
</form>